<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.locals.title = "Login" 
} %>

<!-- Flash Message -->
<%- messages() %>

<!-- Login Form -->
<form id="login-form" action="/account/login" method="post">
  <fieldset id="box">
    
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email || '' %>">
    
    <label for="account_password">Password:</label>
    <input 
      type="password" id="account_password" name="account_password" 
      required value="<%= locals.account_password || '' %>"
      pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&#+\-_=])[A-Za-z\d@$!%*?&#+\-_=]{12,}$">
    
    <input type="submit" value="Login" class="button">
    
    <p>No Account? <a href="/account/register">Sign-up</a></p>
  </fieldset>
</form>
