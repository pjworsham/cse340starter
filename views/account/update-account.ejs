<!-- Change Password Form -->
<form id="change-password-form" action="/account/change-password" method="post">
  <fieldset>
    <legend>Change Password</legend>
    
    <input type="hidden" name="account_id" value="<%= account_id %>">
    
    <p class="password-info">
      <strong>Note:</strong> Entering a new password will change your current password. 
      Password must be at least 12 characters long and include an uppercase letter, 
      lowercase letter, number, and special character.
    </p>
    
    <label for="current_password">Current Password:</label>
    <input 
      type="password" 
      id="current_password" 
      name="current_password" 
      required
    >
    
    <label for="account_password">New Password:</label>
    <input 
      type="password" 
      id="account_password" 
      name="account_password" 
      required
      pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}$"
      title="Password must be at least 12 characters with uppercase, lowercase, number, and special character"
    >
    
    <label for="confirm_password">Confirm New Password:</label>
    <input 
      type="password" 
      id="confirm_password" 
      name="confirm_password" 
      required
    >
    
    <input type="submit" value="Change Password" class="button">
  </fieldset>
</form>