<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.locals.title = "Account Management" 
} %>

<!-- Flash Messages -->
<%- messages() %>

<!-- Display Validation Errors -->
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- wk 5 assignment welcome greeting for all users -->
<h3>Welcome <%= locals.accountData.account_firstname %></h3>

<p>You're logged in.</p>

<!-- Wk 5 Assignment Update account information link for all users -->
<p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>


<!-- Wk 5 Assignment - Show inventory management link only for Employee/Admin -->
<% if (locals.accountData.account_type == 'Employee' || locals.accountData.account_type == 'Admin') { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv/">Manage Inventory</a></p>
<% } %>