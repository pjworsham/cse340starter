<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.locals.title = "Register" 
} %>

<!-- Flash Message -->
<%- messages() %>

<!-- Registration Form -->
<form id="register-form" action="/account/register" method="post">
  <fieldset id="box">

    <label id= "fName" for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" required>

    <label id="lName" for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" required>
    
    <label id="reg_email" for="email">Email:</label>
    <input type="email" id="email" name="email" required>
    
    <label id="reg_password" for="password">Password:</label>
    <input 
        type="password" 
        id="password" 
        name="password" 
        required
        minlength="12"
        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}$"
        title="Password must be at least 12 characters long and contain at least one uppercase letter, one lowercase letter, one number, and one special character (@$!%*?&)">

    <input type="submit" value="Register" class="button">
    
  </fieldset>
</form>