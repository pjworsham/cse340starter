<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.locals.title = "Add New Classification" 
} %>

<!-- Flash Messages -->
<%- messages() %>

<!-- Display Validation Errors -->
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<h2>Add New Vehicle Classification</h2>

<form id="add-classification-form" action="/inv/add-classification" method="post">
  <fieldset id="classification-form">
    <legend>Classification Information</legend>
    
    <label for="classification_name">Classification Name: *</label>
    <input 
      type="text" 
      id="classification_name" 
      name="classification_name" 
      required
      pattern="^[A-Za-z]+$"
      title="Classification name cannot contain spaces or special characters. Only letters are allowed."
      placeholder="Enter classification name"
      value="<%= locals.classification_name || '' %>"
    >
    
    <p class="form-instructions">
      <strong>Important:</strong> The classification name cannot contain spaces or special characters. Only letters (A-Z, a-z) are allowed.
    </p>
    
    <input type="submit" value="Add Classification" class="button">
  </fieldset>
</form>

<script>
// Client-side validation
document.getElementById('add-classification-form').addEventListener('submit', function(e) {
  const classificationName = document.getElementById('classification_name').value;
  const pattern = /^[A-Za-z]+$/;
  
  if (!pattern.test(classificationName)) {
    e.preventDefault();
    alert('Classification name can only contain letters (A-Z, a-z). No spaces or special characters allowed.');
    return false;
  }
  
  if (classificationName.length < 1) {
    e.preventDefault();
    alert('Please enter a classification name.');
    return false;
  }
});
</script>