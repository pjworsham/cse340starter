<!-- wk 5 -Team activity -->

<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.locals.title = "Delete Vehicle" 
} %>

<!-- Flash Messages -->
<%- messages() %>

<!-- Confirmation Message -->
<p>Deleting this vehicle will remove it permanently from the inventory.</p>

<!-- Display Validation Errors -->
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form id="delete-inventory-form" action="/inv/delete/" method="post">
  <fieldset id="inventory-form">

    <!-- wk5 -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    
    <label for="inv_make">Make:</label>
    <input 
      type="text" 
      id="inv_make" 
      name="inv_make" 
      value="<%= inv_make || '' %>"
      readonly
    >
    
    <label for="inv_model">Model:</label>
    <input 
      type="text" 
      id="inv_model" 
      name="inv_model" 
      value="<%= inv_model || '' %>"
      readonly
    >
    
    <label for="inv_year">Year:</label>
    <input 
      type="number" 
      id="inv_year" 
      name="inv_year" 
      value="<%= inv_year || '' %>"
      readonly
    >
    
    <label for="inv_price">Price:</label>
    <input 
      type="number" 
      id="inv_price" 
      name="inv_price" 
      step="0.01"
      value="<%= inv_price || '' %>"
      readonly
    >
    
    <input type="submit" name="submit" value="Delete" class="button">
    
  </fieldset>
</form>